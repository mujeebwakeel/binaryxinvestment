    <section id="contact" class="contact section-bg">
        <div class="container">
            <% if(message && message.length > 0){ %>
                <div class="alert alert-danger" role="alert">
                      <p><%= message %></p>
                </div>
                <% } %>
                <% if(logout && logout.length > 0) { %>
                <div class="alert alert-warning" role="alert">
